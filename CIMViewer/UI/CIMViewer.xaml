    <Grid MouseWheel="UIElement_OnMouseWheel">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>

        <Border Background="{DynamicResource Esri_Gray120}" BorderBrush="{DynamicResource Esri_Blue4}" BorderThickness="1"
                    Grid.Row="0" Padding="1">
            <DockPanel LastChildFill="True">
                <Expander x:Name="Validation" Header="Validation" IsExpanded="False" DockPanel.Dock="Bottom">
                    <TextBox Text="{Binding Path=ValidationText, Mode=OneWay}" 
                             TextWrapping="Wrap" IsReadOnly="True" MaxLines="4"
                             Margin="2,3"></TextBox>
                </Expander>
                
                <avalonedit:TextEditor Name="AvalonTextEditor" 
                            SyntaxHighlighting="XML"
                            FontFamily="Consolas"
                            FontSize="12"
                            ShowLineNumbers="True">
                    <avalonedit:TextEditor.Options>
                        <avalonedit:TextEditorOptions ShowSpaces="True" ShowTabs="True"/>
                    </avalonedit:TextEditor.Options>
                    <avalonedit:TextEditor.ContextMenu>
                        <ContextMenu x:Name="TextEditorContextMenu">
                            <ContextMenu.Resources>
                                <Style TargetType="MenuItem">
                                    <Setter Property="CommandParameter" 
                                        Value="{Binding Path=., RelativeSource={RelativeSource AncestorType={x:Type ContextMenu}}}"/>
                                </Style>
                            </ContextMenu.Resources>
                            <MenuItem Header="Save" Command="{Binding SaveCommand}" />
                            <Separator />
                            <MenuItem Header="Cut" Command="{Binding CutCommand}" />
                            <MenuItem Header="Copy" Command="{Binding CopyCommand}" />
                            <MenuItem Header="Paste" Command="{Binding PasteCommand}" />
                            <Separator />
                            <MenuItem Header="Undo" Command="{Binding UndoCommand}" />
                            <MenuItem Header="Redo" Command="{Binding RedoCommand}" />
                            <Separator />
                            <MenuItem Header="Refresh" Command="{Binding RefreshCommand}" />
                            <Separator />
                            <MenuItem Header="Validate" Command="{Binding ValidateCommand}" />
                        </ContextMenu>
                    </avalonedit:TextEditor.ContextMenu>
                </avalonedit:TextEditor>
            </DockPanel>
                
        </Border>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" 
                        Grid.Row="1" Margin="0,15,0,5">
            <Button Content="Refresh" Command="{Binding Path=RefreshCommand}" Width="65" Height="24" Margin="5,1"></Button>
            <Button Content="Validate" Command="{Binding Path=ValidateCommand}" Width="65" Height="24" Margin="5,1"></Button>
            <Button Content="Clear" Command="{Binding Path=ClearCommand}" Width="65" Height="24" Margin="5,1"></Button>
            <Button Content="Save" Command="{Binding Path=SaveCommand}" Width="65" Height="24" Margin="5,1"></Button>
        </StackPanel>

    </Grid>
</UserControl>
